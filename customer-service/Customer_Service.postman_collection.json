			"item": [
				{
					"name": "Create Company",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"legalName\": \"Acme Corporation\",\n  \"vatNumber\": \"FR12345678901\",\n  \"country\": \"France\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/companies",
							"host": ["{{base_url}}"],
							"path": ["api", "companies"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"companyId\", jsonData.id);",
									"",
									"pm.test(\"Response has id\", function () {",
									"    pm.expect(jsonData).to.have.property('id');",
									"});"
								]
							}
						}
					]
				},
